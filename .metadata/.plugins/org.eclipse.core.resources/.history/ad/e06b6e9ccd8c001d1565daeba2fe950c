package chapter02;

// 클래스와 인스턴스
// 클래스: 객체 (인스턴스)를 생성하기 위한 도구
//       속성들의 집합
//       클래스명은 UpperCamelCase를 따름

// 인스턴스: 클래스로 만들어진 객체

// class 선언 방법
// 접근제어자 class 클래스명 {
//   데이터타입 속성명;
//   ...
//   접근제어자 반환타입 메서드명(매개변수타입 매개변수명) {
//     기능 구현부
//   }
//   ...
// }

// 사람은 이름, 나이, 성별, 키, 몸무게로 이루어져 있다.
// 사람은 나이를 먹는다.
// 사람은 몸무게와 키가 변한다.
// 사람은 이름을 바꿀 수 있다.
class Human {
	// 인스턴스 변수
	// 인스턴스를 생성해야 사용 할 수 있는 각 인스턴스 고유의 속성
	String name;
	int age;
	String gender;
	float height;
	float weight;
	
	// 클래스 변수
	// 인스턴스 생성 없이 클래스에서 바로 접근 가능한 클래스 전체의 공통 속성
	static float averageAge = 80;
	static float averageHeight = 170;
	static float averageWeigt = 70;
	
	// 인스턴스 메서드
	// 인스턴스 변수를 사용하는 메서드
	// 각 인스턴스마다의 고유한 기능
	void addAge() {
		this.age++;
	}
	
	void setHeight(float height, float weight) {
		this.height = height;
		this.weight = weight;
	}
	
	void setName(String name) {
		this.name = name;
	}
	
	// 클래스 메서드
	// 클래스 변수를 사용하는 메서드
	// 클래스에서 공통으로 사용되는 메서드
	void 
}

public class Summary01 {
	// 인스턴스 생성 방법
	// 클래스명 참조변수명 = new 클래스명(); -> 클래스명() = 생성자 
	Human human = new Human();
}
